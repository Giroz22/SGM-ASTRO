---
interface Props{
    title: string;
    urlImgBG: string;
}

const {title, urlImgBG} = Astro.props;
---

<header class= {`p-16 relative before:content-[''] before:inset-0 before:absolute before:bg-[#000000b3] before:backdrop-blur-sm z-10`}>
    <img src={urlImgBG} alt="" class="absolute inset-0 w-full h-full object-cover -z-20">
    <h2 class="text-2xl text-center md:text-4xl relative">{title}</h2>
</header>
