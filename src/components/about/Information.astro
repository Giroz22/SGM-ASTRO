---
interface Props{
    title: string;
    content: string;
    imgUrl: string;
    imgDescription: string;
    LtoR: boolean;
}

const {title, content, imgUrl, imgDescription, LtoR} = Astro.props;

import {Image} from "@nextui-org/react";
---

<section class="bg-secondaryDark flex justify-center items-center p-8 md:p-20">
    <div 
    class:list={[
        "w-full flex flex-col justify-around items-center gap-8 lg:gap-20",
        {
            "lg:flex-row" : LtoR,
            "lg:flex-row-reverse" : !LtoR
        }
    ]}>
        <div class="basis-1/2 text-justify">
            <h2 class="text-2xl pb-6">{title}</h2>
            <p>{content}</p>
        </div>    
        <div class="basis-1/2">
            <Image src={imgUrl} alt={imgDescription} className="w-full" client:visible></Image>        
        </div>        
    </div>    
</section>